{
  "extends": "@tsconfig/recommended",
  "include": [
    "__mocks__/**/*",
    "__tests__/**/*",
    "bin/**/*",
    "config/**/*",
    "docs/**/*",
    "src/**/*",
    "*",
  ],
  "compilerOptions": {
    "declaration": true,
    "jsx": "react-jsx",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "build",
    "sourceMap": true,
  }
}
