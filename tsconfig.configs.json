// TS configuration for configs pre-building from TS sources.

{
  "extends": "@tsconfig/recommended",
  "include": [
    "config-ts-src",
  ],
  "compilerOptions": {
    "declaration": true,
    "jsx": "react-jsx",
    "rootDir": "config-ts-src",
    "outDir": "config",
    "paths": {
      "*": ["./src/shared/*", "./src/*", "./*"]
    },
    "strict": true
  }
}
