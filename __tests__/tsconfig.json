{
  "extends": "@tsconfig/recommended",
  "exclude": ["ts-types/"],
  "include": [".."],
  "compilerOptions": {
    "jsx": "react-jsx",
    "noEmit": true,
    "paths": {
      "client": ["../src/client"],
      "components/*": ["../src/shared/components/*"],
      "server/*": ["../src/server/*"],
      "src/*": ["../src/*"],
      "utils/*": ["../src/shared/utils/*"]
    },
    "rootDirs": [
      "..",
      "../build/scss-types",
    ],
    "strict": true,
  },
}
